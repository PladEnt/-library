<h1><%=link_to @book.title, book_path(@book) %><h1/>

<h2>Positive reviews<h2/>
<% @book.reviews.positive.each do |review| %>
    <h3><%= review.description %><h3/>
<% end %>
    

<h2>Negative reviews<h2/>
<% @book.reviews.negative.each do |review| %>
    <h3><%= review.description %><h3/>
<% end %>
